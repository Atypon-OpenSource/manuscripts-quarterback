{
  "name": "manuscripts-quarterback",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Atypon-OpenSource/manuscripts-quarterback.git"
  },
  "author": "Atypon Systems LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/Atypon-OpenSource/manuscripts-quarterback/issues"
  },
  "homepage": "https://github.com/Atypon-OpenSource/manuscripts-quarterback#readme",
  "scripts": {
    "format": "pnpm -r format",
    "lint:fix": "eslint --ignore-path .gitignore --fix --ext .js,.cjs,.ts,.tsx .",
    "build:ex": "(pnpm --filter @manuscripts/manuscript-transform build 2>/dev/null || true) && (pnpm --filter @manuscripts/style-guide build 2>/dev/null || true) && (pnpm --filter @manuscripts/manuscript-editor build 2>/dev/null || true)",
    "build:api": "pnpm --filter @manuscripts/quarterback-shared build && pnpm --filter @manuscripts/quarterback-api build",
    "build:db": "pnpm --filter @manuscripts/quarterback-db build",
    "build:track": "pnpm --filter @manuscripts/track-changes-plugin build",
    "build": "pnpm --filter \"./quarterback-packages/**\" build",
    "ex:api": "concurrently --kill-others 'pnpm --filter @manuscripts/examples-track-api watch' 'pnpm --filter @manuscripts/examples-track-api dev' 'pnpm --filter @manuscripts/examples-track-collab watch' 'pnpm --filter @manuscripts/examples-track-collab dev'",
    "ex:collab": "concurrently --kill-others 'pnpm --filter @manuscripts/examples-track-collab watch' 'pnpm --filter @manuscripts/examples-track-collab dev'",
    "ex:utils": "concurrently --kill-others 'pnpm --filter @manuscripts/examples-track-shared watch' 'pnpm --filter @manuscripts/examples-track-schema watch' 'pnpm --filter @manuscripts/examples-track-editor watch' 'pnpm --filter @manuscripts/track-changes-plugin watch' 'pnpm --filter @manuscripts/ext-yjs watch'",
    "ex:client": "pnpm --filter @manuscripts/examples-track-client dev",
    "ex:start": "concurrently --kill-others 'pnpm ex:api' 'pnpm ex:utils' 'pnpm ex:client'",
    "start": "concurrently --kill-others 'pnpm --filter @manuscripts/quarterback-shared watch' 'pnpm --filter @manuscripts/track-changes-plugin watch' 'pnpm --filter @manuscripts/quarterback-api watch' 'pnpm --filter @manuscripts/quarterback-api dev'",
    "track": "pnpm --filter @manuscripts/track-changes-plugin watch",
    "ex:e2e": "pnpm --filter @manuscripts/examples-track-e2e test",
    "ex:e2e:open": "pnpm --filter @manuscripts/examples-track-e2e start",
    "cs": "changeset",
    "cs:version": "changeset version",
    "cs:publish": "changeset publish",
    "ci:version": "changeset version && pnpm i --lockfile-only",
    "ci:publish": "pnpm --filter \"./quarterback-packages/**\" --no-git-checks publish",
    "artifactregistry-login": "npx google-artifactregistry-auth"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "^7.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@manuscripts/eslint-config": "^0.4.2",
    "@types/jsdom": "^16.2.4",
    "@types/node": "^17.0.34",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "concurrently": "^6.3.0",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^26.0.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "prettier": "^2.4.1"
  }
}