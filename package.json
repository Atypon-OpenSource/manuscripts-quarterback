{
  "name": "manuscripts-quarterback",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.com/mpapp-public/manuscripts-quarterback.git"
  },
  "author": "Atypon Systems LLC",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://gitlab.com/mpapp-public/manuscripts-quarterback/issues"
  },
  "homepage": "https://gitlab.com/mpapp-public/manuscripts-quarterback#readme",
  "scripts": {
    "format": "pnpm run format -r",
    "build": "pnpm run build --filter @manuscripts/manuscript-editor | pnpm run build --filter @manuscripts/style-guide | pnpm run build --filter @manuscripts/manuscript-transform",
    "api": "concurrently --kill-others 'pnpm run watch --filter @manuscripts/quarterback-api' 'pnpm run dev --filter @manuscripts/quarterback-api' 'pnpm run watch --filter @manuscripts/quarterback-collab' 'pnpm run dev --filter @manuscripts/quarterback-collab'",
    "utils": "concurrently --kill-others 'pnpm run watch --filter @manuscripts/quarterback-shared' 'pnpm run watch --filter @manuscripts/pm-track-changes'",
    "client": "concurrently --kill-others 'pnpm run start --filter @manuscripts/quarterback-example-app'",
    "start": "concurrently --kill-others 'pnpm api' 'pnpm utils' 'pnpm client'",
    "e2e": "pnpm run test --filter @manuscripts/quarterback-e2e",
    "e2e:open": "pnpm run start --filter @manuscripts/quarterback-e2e"
  },
  "engines": {
    "node": ">=16",
    "pnpm": "^6.0.0"
  },
  "devDependencies": {
    "@manuscripts/eslint-config": "^0.4.2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^24.7.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-mdx": "^1.16.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^5.0.3",
    "jest": "^27.3.1"
  }
}