{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": ["es2017", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2017",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "packages/style-guide/stories/types"]
  },
  "include": ["packages"]
}
